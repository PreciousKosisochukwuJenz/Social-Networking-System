<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<div class="container-xl">
  <!-- Page title -->
  <div class="page-header d-print-none">
    <div class="row align-items-center"></div>
  </div>
</div>
<div class="page-body">
  <div class="container-xl">
    <div class="col">
      <!-- Page pre-title -->
      <div class="page-pretitle">Settings</div>
      <h2 class="page-title">Configuration</h2>

      <!-- form handling -->
      <form action="/api/settings" method="PUT" id="setting">
        <div class="new_user">
          <div class="mb-3">
            <label class="form-label">App Name</label>
            <div class="row g-2">
              <div class="col">
                <input
                  type="text"
                  name="appName"
                  value="<%= settings.appName %>"
                  class="form-control"
                  placeholder="Enter app name"
                />
              </div>
              <div class="col-auto align-self-center">
                <span
                  class="form-help"
                  data-bs-toggle="popover"
                  data-bs-placement="top"
                  data-bs-content="<p>Enter the name to be displayed as the application name</p> "
                  data-bs-html="true"
                  >?</span
                >
              </div>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label">Powerred By</label>
            <div class="row g-2">
              <div class="col">
                <input
                  type="text"
                  name="poweredBy"
                  class="form-control"
                  value="<%= settings.poweredBy %>"
                  placeholder="Enter powerred by"
                />
              </div>
              <div class="col-auto align-self-center">
                <span
                  class="form-help"
                  data-bs-toggle="popover"
                  data-bs-placement="top"
                  data-bs-content="<p>Enter the powerred by to be displayed on the footer</p> "
                  data-bs-html="true"
                  >?</span
                >
              </div>
            </div>
          </div>

          <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">
              Update
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
   <div class="modal modal-blur fade" id="modal-success" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
        <div class="modal-content">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          <div class="modal-status bg-success"></div>
          <div class="modal-body text-center py-4">
            <!-- Download SVG icon from http://tabler-icons.io/i/circle-check -->
            <svg xmlns="http://www.w3.org/2000/svg" class="icon mb-2 text-green icon-lg" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><circle cx="12" cy="12" r="9" /><path d="M9 12l2 2l4 -4" /></svg>
            <h3 id="modal-title">Successful</h3>
            <div class="text-muted">Click `Okay` to proceed</div>
          </div>
          <div class="modal-footer">
            <div class="w-100">
              <div class="row">
                <div class="col"><a href="#"onclick="location.reload()" class="btn btn-success w-100" data-bs-dismiss="modal">
                    Okay!
                  </a></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
